<Window x:Class="Peacock.Designer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="1200" Width="1600">
    <Grid HorizontalAlignment="Left" Height="1169" VerticalAlignment="Top" Width="1592" Background="#FF81BD9D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="162*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1">
            <StackPanel HorizontalAlignment="Left" Height="1169" VerticalAlignment="Top" Width="296" Background="#FFB1BFE4">
                <Button Content="Button" Click="Button_Click"/>

                <Expander Header="More Options" Background="DarkGray" FontSize="14">
                    <StackPanel Margin="10,4,0,0">
                        <CheckBox Margin="4" Content="Option 1" />
                        <CheckBox Margin="4" Content="Option 2" />
                        <CheckBox Margin="4" Content="Option 3" />
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>
        <Canvas Grid.Column="1" HorizontalAlignment="Left" Margin="479,260,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
